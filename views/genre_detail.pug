extends layout

block content

  h2 #{genre.name}
  
  div(style='margin-top:20px')

    h4 books
    
    dl
      each book in genre_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This genre has no books
        
  p 
    a.btn.btn-danger(href=genre.url+'/delete') delete     