          a.nav-item.nav-link(href='/catalog/books') BOOKS
          a.nav-item.nav-link(href='/catalog/authors') AUTHORS
          a.nav-item.nav-link(href='/catalog/genres') GENRES
          a.nav-item.nav-link(href='/catalog/bookinstances') COPIES
  
          
    div(class='container-fluid')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
            ul(class='sidebar-nav')
              li 
                a(href='/catalog/author/create')  Add Author
              li 
                a(href='/catalog/genre/create') Add Genres
              li
                a(href='/catalog/book/create')  Add Book
              li 
                a(href='/catalog/bookinstance/create') Add Copy 
            img(src="https://images-na.ssl-images-amazon.com/images/I/51RjqtYV48L._SX331_BO1,204,203,200_.jpg", alt="")
                
            img(src="https://www1.alibris-static.com/kusadikika/isbn/9789976973105_l.jpg", alt="")    
                
